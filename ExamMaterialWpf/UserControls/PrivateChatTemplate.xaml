<UserControl x:Class="ExamMaterialWpf.PrivateChatTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamMaterialWpf"
             mc:Ignorable="d" 
            >
    <StackPanel >
        <ListBox HorizontalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Visible" Name="chatLb" Height="385"  Background="#303030">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Margin" Value="10,10,0,0"/>
                    <Setter Property="Focusable" Value="False"/>
                </Style>
            </ListBox.ItemContainerStyle>

        </ListBox>
        <WrapPanel Margin="0 20 0 0">
            <TextBox Name ="tbMessage" FontSize="15"  Width="1200" Background="White"></TextBox>
           
        </WrapPanel>
    </StackPanel>
</UserControl>
